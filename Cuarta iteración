public class Atuendo{
  private List <Prenda> prendas
   
  
  public void cargarPrendas (Prenda prenda)
    prendas.add(Prenda)
    
   public void crearAtuendo
    prendas.stream().filter(prenda->prenda.esValida()).forEach(prenda -> this.cargarPrenda(prenda))
    
   public  
}

